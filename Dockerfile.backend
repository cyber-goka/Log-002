FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi==0.109.0 \
    uvicorn[standard]==0.27.0 \
    httpx==0.26.0 \
    python-multipart==0.0.6

# Copy application code
COPY backend.py /app/

# Expose port
EXPOSE 8001

# Run the application
CMD ["uvicorn", "backend:app", "--host", "0.0.0.0", "--port", "8001"]
